generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//user model
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String?
  createdAt DateTime @default(now())
  threads   Thread[]
}

//chat thread
model Thread {
  id        String   @id @default(uuid())
  userId    String
  title     String
  user      User     @relation(fields: [userId], references: [id])
  chats     Chat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Chat {
  id        String   @id @default(uuid())
  threadId  String
  prompt    String
  response  String
  provider  String
  model     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  thread    Thread   @relation(fields: [threadId], references: [id])
}
